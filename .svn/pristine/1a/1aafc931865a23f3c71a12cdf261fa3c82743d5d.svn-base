#loginPublish {
    width: 620px;
    height: 240px;
    background-color: #F2F2F2;
    box-shadow: 4px 4px 4px #ACACAC;
    margin-bottom: 10px;
    text-align: center;
}
#loginPublish form textarea{
    box-sizing: border-box;
    width: 560px;
    height: 160px;
    border: 1px solid #93247a;
    box-shadow: 0px 0px 10px #93247a;
    resize: none;
    margin-top: 16px;
    padding:12px 22px;

}
#loginPublish form div .commentBtn{
    width: 32px;
    float:left;
    margin-left:30px;
    margin-top: 12px;
}
#loginPublish form div button{
    padding: 4px 24px;
    border:2px solid #93247a;
    float: right;
    border-radius: 3px;
    font-weight: bold;;
    color: #93247a;
    background-color: #ffffff;
    margin:10px 16px;
    cursor: pointer;
}
#loginPublish form div button:hover{
    background-color: #93247a;
    color: #ffffff;
}